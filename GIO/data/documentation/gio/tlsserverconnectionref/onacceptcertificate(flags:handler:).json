ntation\/GIO\/TLSServerConnectionRef\/onAcceptCertificate(flags:handler:)","kind":"symbol","type":"topic","url":"\/documentation\/gio\/tlsserverconnectionref\/onacceptcertificate(flags:handler:)"},"doc://GIO/documentation/GIO/TLSServerConnection":{"role":"symbol","title":"TLSServerConnection","fragments":[{"kind":"keyword","text":"class"},{"kind":"text","text":" "},{"kind":"identifier","text":"TLSServerConnection"}],"abstract":[{"type":"codeVoice","code":"GTlsServerConnection"},{"type":"text","text":" is the server-side subclass of"},{"type":"text","text":" "},{"type":"text","text":"[class"},{"type":"reference","isActive":true,"identifier":"doc:\/\/GIO\/documentation\/GIO\/TLSConnection"},{"type":"text","text":"], representing a server-side TLS connection."}],"identifier":"doc:\/\/GIO\/documentation\/GIO\/TLSServerConnection","kind":"symbol","type":"topic","navigatorTitle":[{"kind":"identifier","text":"TLSServerConnection"}],"url":"\/documentation\/gio\/tlsserverconnection"},"//documentation/gio/tlsconnection/onacceptcertificate(flags:handler:)":{"title":"TLSConnection","titleInlineContent":[{"type":"text","text":"TLSConnection"}],"type":"link","identifier":"\/\/documentation\/gio\/tlsconnection\/onacceptcertificate(flags:handler:)","url":"\/\/documentation\/gio\/tlsconnection\/onacceptcertificate(flags:handler:)"},"doc://GIO/documentation/GIO":{"role":"collection","title":"GIO","abstract":[],"identifier":"doc:\/\/GIO\/documentation\/GIO","kind":"symbol","type":"topic","url":"\/documentation\/gio"},"doc://GIO/documentation/GIO/IOStream":{"role":"symbol","title":"IOStream","fragments":[{"kind":"keyword","text":"class"},{"kind":"text","text":" "},{"kind":"identifier","text":"IOStream"}],"abstract":[{"type":"codeVoice","code":"GIOStream"},{"type":"text","text":" represents an object that has both read and write streams."},{"type":"text","text":" "},{"type":"text","text":"Generally the two streams act as separate input and output streams,"},{"type":"text","text":" "},{"type":"text","text":"but they share some common resources and state. For instance, for"},{"type":"text","text":" "},{"type":"text","text":"seekable streams, both streams may use the same position."}],"identifier":"doc:\/\/GIO\/documentation\/GIO\/IOStream","kind":"symbol","type":"topic","navigatorTitle":[{"kind":"identifier","text":"IOStream"}],"url":"\/documentation\/gio\/iostream"},"doc://GIO/documentation/GIO/TLSServerConnectionRef":{"role":"symbol","title":"TLSServerConnectionRef","fragments":[{"kind":"keyword","text":"struct"},{"kind":"text","text":" "},{"kind":"identifier","text":"TLSServerConnectionRef"}],"abstract":[{"type":"codeVoice","code":"GTlsServerConnection"},{"type":"text","text":" is the server-side subclass of"},{"type":"text","text":" "},{"type":"text","text":"[class"},{"type":"reference","isActive":true,"identifier":"doc:\/\/GIO\/documentation\/GIO\/TLSConnection"},{"type":"text","text":"], representing a server-side TLS connection."}],"identifier":"doc:\/\/GIO\/documentation\/GIO\/TLSServerConnectionRef","kind":"symbol","type":"topic","navigatorTitle":[{"kind":"identifier","text":"TLSServerConnectionRef"}],"url":"\/documentation\/gio\/tlsserverconnectionref"},"doc://GIO/documentation/GIO/TLSCertificateRef":{"role":"symbol","title":"TLSCertificateRef","fragments":[{"kind":"keyword","text":"struct"},{"kind":"text","text":" "},{"kind":"identifier","text":"TLSCertificateRef"}],"abstract":[{"type":"text","text":"A certificate used for TLS authentication and encryption."},{"type":"text","text":" "},{"type":"text","text":"This can represent either a certificate only (eg, the certificate"},{"type":"text","text":" "},{"type":"text","text":"received by a client from a server), or the combination of"},{"type":"text","text":" "},{"type":"text","text":"a certificate and a private key (which is needed when acting as a"},{"type":"text","text":" "},{"type":"text","text":"[iface"},{"type":"reference","isActive":true,"identifier":"doc:\/\/GIO\/documentation\/GIO\/TLSServerConnection"},{"type":"text","text":"])."}],"identifier":"doc:\/\/GIO\/documentation\/GIO\/TLSCertificateRef","kind":"symbol","type":"topic","navigatorTitle":[{"kind":"identifier","text":"TLSCertificateRef"}],"url":"\/documentation\/gio\/tlscertificateref"},"doc://GIO/documentation/GIO/TLSConnectionRef":{"role":"symbol","title":"TLSConnectionRef","fragments":[{"kind":"keyword","text":"struct"},{"kind":"text","text":" "},{"kind":"identifier","text":"TLSConnectionRef"}],"abstract":[{"type":"codeVoice","code":"GTlsConnection"},{"type":"text","text":" is the base TLS connection class type, which wraps"},{"type":"text","text":" "},{"type":"text","text":"a [class"},{"type":"reference","isActive":true,"identifier":"doc:\/\/GIO\/documentation\/GIO\/IOStream"},{"type":"text","text":"] and provides TLS encryption on top of it. Its"},{"type":"text","text":" "},{"type":"text","text":"subclasses, [iface"},{"type":"reference","isActive":true,"identifier":"doc:\/\/GIO\/documentation\/GIO\/TLSClientConnection"},{"type":"text","text":"] and"},{"type":"text","text":" "},{"type":"text","text":"[iface"},{"type":"reference","isActive":true,"identifier":"doc:\/\/GIO\/documentation\/GIO\/TLSServerConnection"},{"type":"text","text":"], implement client-side and server-side TLS,"},{"type":"text","text":" "},{"type":"text","text":"respectively."}],"identifier":"doc:\/\/GIO\/documentation\/GIO\/TLSConnectionRef","kind":"symbol","type":"topic","navigatorTitle":[{"kind":"identifier","text":"TLSConnectionRef"}],"url":"\/documentation\/gio\/tlsconnectionref"},"doc://GIO/documentation/GIO/TLSCertificateFlags":{"role":"symbol","title":"TLSCertificateFlags","fragments":[{"kind":"keyword","text":"struct"},{"kind":"text","text":" "},{"kind":"identifier","text":"TLSCertificateFlags"}],"abstract":[{"type":"text","text":"A set of flags describing TLS certification validation. This can be"},{"type":"text","text":" "},{"type":"text","text":"used to describe why a particular certificate was rejected (for"},{"type":"text","text":" "},{"type":"text","text":"example, in "},{"type":"reference","isActive":true,"identifier":"\/\/documentation\/gio\/tlsconnection\/onacceptcertificate(flags:handler:)"},{"type":"text","text":"."}],"identifier":"doc:\/\/GIO\/documentation\/GIO\/TLSCertificateFlags","kind":"symbol","type":"topic","navigatorTitle":[{"kind":"identifier","text":"TLSCertificateFlags"}],"url":"\/documentation\/gio\/tlscertificateflags"}}}