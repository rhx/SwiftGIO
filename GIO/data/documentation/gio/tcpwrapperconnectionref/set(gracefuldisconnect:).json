"},{"type":"text","text":"connection it has actually created is not directly a"},{"type":"text","text":" "},{"type":"text","text":"[class"},{"type":"reference","isActive":true,"identifier":"doc:\/\/GIO\/documentation\/GIO\/SocketConnection"},{"type":"text","text":"]."}],"identifier":"doc:\/\/GIO\/documentation\/GIO\/TcpWrapperConnectionRef","kind":"symbol","type":"topic","navigatorTitle":[{"kind":"identifier","text":"TcpWrapperConnectionRef"}],"url":"\/documentation\/gio\/tcpwrapperconnectionref"},"doc://GIO/documentation/GIO":{"role":"collection","title":"GIO","abstract":[],"identifier":"doc:\/\/GIO\/documentation\/GIO","kind":"symbol","type":"topic","url":"\/documentation\/gio"},"doc://GIO/documentation/GIO/TcpWrapperConnectionRef/TcpConnectionProtocol-Implementations":{"role":"collectionGroup","title":"TcpConnectionProtocol Implementations","abstract":[],"identifier":"doc:\/\/GIO\/documentation\/GIO\/TcpWrapperConnectionRef\/TcpConnectionProtocol-Implementations","kind":"article","type":"topic","url":"\/documentation\/gio\/tcpwrapperconnectionref\/tcpconnectionprotocol-implementations"},"doc://GIO/documentation/GIO/TcpWrapperConnectionRef/set(gracefulDisconnect:)":{"role":"symbol","title":"set(gracefulDisconnect:)","fragments":[{"kind":"keyword","text":"func"},{"kind":"text","text":" "},{"kind":"identifier","text":"set"},{"kind":"text","text":"("},{"kind":"externalParam","text":"gracefulDisconnect"},{"kind":"text","text":": "},{"kind":"typeIdentifier","text":"Bool","preciseIdentifier":"s:Sb"},{"kind":"text","text":")"}],"abstract":[{"type":"text","text":"This enables graceful disconnects on close. A graceful disconnect"},{"type":"text","text":" "},{"type":"text","text":"means that we signal the receiving end that the connection is terminated"},{"type":"text","text":" "},{"type":"text","text":"and wait for it to close the connection before closing the connection."}],"identifier":"doc:\/\/GIO\/documentation\/GIO\/TcpWrapperConnectionRef\/set(gracefulDisconnect:)","